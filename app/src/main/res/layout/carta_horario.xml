<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/modul_horari"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/aula_horari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/modul_horari"
            android:layout_toRightOf="@+id/modul_horari"
            android:paddingLeft="8dp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/nom_grup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="8dp" />


        <TextView
            android:id="@+id/profe_horari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aula_horari"
            android:layout_toEndOf="@+id/modul_horari"
            android:layout_toRightOf="@+id/modul_horari"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="@string/cargando" />

        <TextView
            android:id="@+id/horas_horari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profe_horari"
            android:layout_toEndOf="@+id/modul_horari"
            android:layout_toRightOf="@+id/modul_horari"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
